graph LR
    subgraph Pillars["The Three Pillars"]
        Metrics[METRICS<br/>The What<br/>Low Cardinality<br/>Alerting]
        Traces[TRACES<br/>The Why<br/>High Cardinality<br/>Debugging]
        Logs[LOGS<br/>The Detail<br/>Forensics<br/>Last Resort]
        
        style Metrics fill:#4A90E2,stroke:#2E5C8A,color:#fff
        style Traces fill:#50C878,stroke:#2E7D4E,color:#fff
        style Logs fill:#FF6B6B,stroke:#CC5555,color:#fff
    end
    
    subgraph Stratification["Dimension Stratification"]
        S1[service_name<br/>region<br/>environment]
        S2[request_uuid<br/>user_id<br/>session_id]
        S3[stack_trace<br/>error_detail<br/>debug_context]
        
        S1 -->|E_low| Metrics
        S2 -->|E_high| Traces
        S3 -->|Verbose| Logs
        
        style S1 fill:#93C5FD,stroke:#3B82F6
        style S2 fill:#86EFAC,stroke:#22C55E
        style S3 fill:#FCA5A5,stroke:#EF4444
    end
    
    Alert[Alert Fires<br/>p99 > 500ms]
    Metrics --> Alert
    
    Alert --> Pivot[Pivot to Trace]
    Traces --> Pivot
    
    Pivot --> Deep[Deep Dive to Logs]
    Logs --> Deep
    
    Deep --> Root[Root Cause Found<br/>MTTR: 24 minutes]
    
    style Alert fill:#FEF3C7,stroke:#D97706,color:#333
    style Root fill:#D1FAE5,stroke:#059669,color:#333,stroke-width:3px
